@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

@model IEnumerable<THLTWeb_2280600147_DOGIAAN.Models.Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Web Bán Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-4">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-img-container">
                            <img src="@product.ImageUrl" class="card-img-top" alt="Hình ảnh sản phẩm">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted"><strong>Danh mục:</strong> @(product.Category != null ? product.Category.Name : "Không có danh mục")</p>
                            <p class="card-text"><strong>Giá:</strong> @product.Price VND</p>
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@product.Id" asp-route-quantity="@numOfQuantity" >
                                <button class="btn btn-primary"> <i class="bi-cart-fill me-1"></i>Add to cart</button>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>